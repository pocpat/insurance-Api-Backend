{
    "compilerOptions": {
      "target": "ES2015",
      "outDir": "dist",
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
    },
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Recommended",
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.test.ts"]
  }